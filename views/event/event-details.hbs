        <form action="/eventos/detalles/{{evento._id}}/participants" method="POST">
            <button type="submit" class="btn btn-dark"> asistir√© </button>
        </form>

    </div> --}}

    <div>
        <center>
            <h3 id="counter-label">{{counter}}</h3>
        </center>
    </div>
    <center>
        <form action="/eventos/detalles/{{evento._id}}/participants" method="POST">
            <button id='buttonClick' class="btn btn-dark"> ASISTIRE </button>

        </form>
    </center>
    <br><br>


    <div class="d-none">
        <input value="{{evento.address.location.coordinates.[0]}}">
        <input value="{{evento.address.location.coordinates.[1]}}">
    </div>
    <div>
        <figure id="myMap">
    </div>

    </figure>
