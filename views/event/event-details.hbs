<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">
            <br>
            <h1> Detalles del evento</h1>

        </div>
        <h5> Nombre: {{evento.name}} </h5>
        <br>
        <h5> Fecha: {{evento.date}} </h5>
        <br>
        <h5> Direccion: {{evento.address.street.streetName}} </h5>
        <br>
        <h5> Ciudad: {{evento.address.city}} </h5>
        <br>
        <img class='imagenEvento' src="{{evento.image}}" alt="imagen del evento"></img>
        <h5> descripcion {{evento.description}} </h5>
        <br><br>


        {{!-- {{if isOwn}} --}}
        <br><br>
    </div>
    {{#if isPartner}}
    <a href="/eventos/editar/{{evento._id}}" class="btn btn-danger d-grid gap-2 col-3">Editar</a>
    <form action="/eventos/{{evento._id}}/delete" method="POST">
        <button type="submit" class="btn btn-dark d-grid gap-2 col-3">Borrar evento</button>
    </form>

    {{/if}}


    <hr>

    {{!-- //formulario comentarios --}}
    <div class="mb-3">
        <form action="/eventos/detalles/{{evento._id}}/comments" method="POST">
            <label for="exampleFormControlTextarea1" class="form-label">Deja tu comentario</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="text"></textarea>
            <button type="submit" class="btn btn-dark"> comentar </button>
        </form>
    </div>

    {{#each comments}}

    <p>{{this.text}}</p>

    {{/each}}



    {{!-- //formulario asistire --}}
